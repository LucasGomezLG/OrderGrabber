@model Order_Graber_DataService.ORDERS

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ORDERS</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ID de orden
        </dt>

        <dd>
            @Html.DisplayFor(model => model.order_id)
        </dd>

        <dt>
            Id de cliente
        </dt>

        <dd>
            @Html.DisplayFor(model => model.client_id)
        </dd>

        <dt>
            Fecha de orden
        </dt>

        <dd>
            @Html.DisplayFor(model => model.order_date)
        </dd>

        <dt>
            Total
        </dt>

        <dd>
            @Html.DisplayFor(model => model.total_order)
        </dd>

        <dt>
           State
        </dt>

        <dd>
            @Html.DisplayFor(model => model.state)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-default" /> |
            @Html.ActionLink("Volver", "IndexOrder")
        </div>
    }
</div>
