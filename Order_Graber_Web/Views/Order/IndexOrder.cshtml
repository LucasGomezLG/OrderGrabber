@model IEnumerable<Order_Graber_DataService.ORDERS>

<p>
    @Html.ActionLink("Nueva orden", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Fecha de la orden
        </th>
        <th>
           Total
        </th>
        <th>
            State
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.order_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.total_order)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.state)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new {  id=item.order_id }) |
            @Html.ActionLink("Detalle", "Detail", new { id = item.order_id }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.order_id })
        </td>
    </tr>
}

</table>
