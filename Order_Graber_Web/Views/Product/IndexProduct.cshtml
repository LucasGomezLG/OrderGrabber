@model IEnumerable<Order_Graber_DataService.PRODUCTS>

<p>
    @Html.ActionLink("Nuevo producto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre del producto
        </th>
        <th>
            Precio de costo
        </th>
        <th>
            State
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.product_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cost_price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.state)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.product_id }) |
            @Html.ActionLink("Detalle", "Detail", new { id = item.product_id }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.product_id })
        </td>
    </tr>
}

</table>
