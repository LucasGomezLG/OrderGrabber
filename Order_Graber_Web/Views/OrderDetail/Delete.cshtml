@model Order_Graber_DataService.ORDERS_DETAIL

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ORDERS_DETAIL</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Id
        </dt>

        <dd>
            @Html.DisplayFor(model => model.line_id)
        </dd>

        <dt>
            Id de orden
        </dt>

        <dd>
            @Html.DisplayFor(model => model.order_id)
        </dd>

        <dt>
           Id de producto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.product_id)
        </dd>

        <dt>
           Cantidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.quantity)
        </dd>

        <dt>
           Total
        </dt>

        <dd>
            @Html.DisplayFor(model => model.total_line)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-default" /> |
            @Html.ActionLink("Volver", "IndexOrdersDetail")
        </div>
